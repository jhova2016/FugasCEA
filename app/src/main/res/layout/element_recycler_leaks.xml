<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardElevation="5dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="8dp"
    >

    <LinearLayout
        android:id="@+id/ColStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/Col2"
        >
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/AuxWhite"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >




                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:layout_margin="8dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fecha de reporte"
                                    android:textColor="@color/AuxBlack"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    tools:ignore="RtlHardcoded" />

                                <TextView
                                    android:id="@+id/ReportDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00/00/00"
                                    android:textColor="@color/AuxBlack"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    tools:ignore="RtlHardcoded" />

                            </LinearLayout>


                            <androidx.cardview.widget.CardView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                app:cardCornerRadius="16dp"
                                app:cardBackgroundColor="@color/AuxWhite"
                                android:layout_margin="4dp"
                                >
                                <LinearLayout
                                    android:id="@+id/ColImportance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/Inportance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Normal"
                                        android:textColor="@color/AuxBlack"
                                        android:gravity="left"
                                        android:textSize="16sp"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="16dp"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="4dp"

                                        tools:ignore="RtlHardcoded" />

                                </LinearLayout>




                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/Hint"
                            android:layout_marginBottom="8dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="20dp"
                                android:layout_height="20dp"

                                app:srcCompat="@drawable/location" />

                            <TextView
                                android:id="@+id/Location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location"
                                android:textColor="@color/AuxBlack"
                                android:gravity="left"
                                android:textSize="16sp"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="1"
                                tools:ignore="RtlHardcoded" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <ImageView

                                android:layout_width="20dp"
                                android:layout_height="20dp"

                                app:srcCompat="@drawable/refeneces" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/Hint"
                                android:layout_marginLeft="4dp"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/referencias"
                                    android:textColor="@color/AuxBlack"
                                    android:gravity="left"
                                    android:textSize="10sp"

                                    android:layout_marginEnd="16dp"

                                    tools:ignore="RtlHardcoded" />

                                <TextView
                                    android:id="@+id/References"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/referencias"
                                    android:textColor="@color/AuxBlack"
                                    android:gravity="left"
                                    android:textSize="14sp"

                                    android:layout_marginEnd="16dp"

                                    tools:ignore="RtlHardcoded" />

                            </LinearLayout>


                        </LinearLayout>





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"

                                app:srcCompat="@drawable/employment" />
                            <TextView
                                android:id="@+id/Responsible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/responsable"
                                android:textColor="@color/Col1"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:layout_marginLeft="4dp"


                                />



                        </LinearLayout>








                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:id="@+id/LinearStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estatus"
                android:textColor="@color/AuxWhite"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_margin="4dp"


                />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"

                app:srcCompat="@drawable/editstatus" />

        </LinearLayout>



    </LinearLayout>






</androidx.cardview.widget.CardView>